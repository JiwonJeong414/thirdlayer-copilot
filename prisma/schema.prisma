generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String   @id @default(uuid()) // UUID instead of ObjectId
  uid   String?  @unique
  email String   @unique
  chats Chat[]
}

model Chat {
  id        String   @id @default(uuid())
  summary   String
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade) // reference primary key
  messages  Message[]
}

model Message {
  id        String   @id @default(uuid())
  content   String
  images    String[] // works with PostgreSQL as `text[]`
  timestamp DateTime @default(now())
  sender    String
  chatId    String
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
}
